<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="wswStrokeWidth" format="reference|dimension"/>
    <attr name="wswCornerRadius" format="reference|dimension"/>
    <attr name="wswNormalStrokeColor" format="reference|color"/>
    <attr name="wswNormalStrokeWidth" format="reference|dimension"/>
    <attr name="wswNormalTextColor" format="reference|color"/>
    <attr name="wswNormalFillColor" format="reference|color"/>
    <attr name="wswPressedStrokeColor" format="reference|color"/>
    <attr name="wswPressedStrokeWidth" format="reference|dimension"/>
    <attr name="wswPressedTextColor" format="reference|color"/>
    <attr name="wswPressedFillColor" format="reference|color"/>
    <attr name="wswSelectedStrokeColor" format="reference|color"/>
    <attr name="wswSelectedStrokeWidth" format="reference|dimension"/>
    <attr name="wswSelectedTextColor" format="reference|color"/>
    <attr name="wswSelectedFillColor" format="reference|color"/>
    <attr name="wswDisabledStrokeColor" format="reference|color"/>
    <attr name="wswDisabledStrokeWidth" format="reference|dimension"/>
    <attr name="wswDisabledTextColor" format="reference|color"/>
    <attr name="wswDisabledFillColor" format="reference|color"/>
    <attr name="wswRippleColor" format="reference|color"/>
    <attr name="wswTextColor" format="color|reference"/>
    <attr name="wswTextSize" format="dimension|reference"/>
    <attr name="wswMax" format="integer"/>
    <attr name="wswProgress" format="integer"/>

    <!-- 开关 -->
    <declare-styleable name="SwitchButton">
        <attr name="wswThumbDrawable" format="reference"/>
        <attr name="wswThumbColor" format="color|reference"/>
        <attr name="wswThumbMargin" format="dimension|reference"/>
        <attr name="wswThumbMarginTop" format="dimension|reference"/>
        <attr name="wswThumbMarginBottom" format="dimension|reference"/>
        <attr name="wswThumbMarginLeft" format="dimension|reference"/>
        <attr name="wswThumbMarginRight" format="dimension|reference"/>
        <attr name="wswThumbWidth" format="dimension|reference"/>
        <attr name="wswThumbHeight" format="dimension|reference"/>
        <attr name="wswThumbRadius" format="dimension|reference"/>
        <attr name="wswBackRadius" format="dimension|reference"/>
        <attr name="wswBackDrawable" format="reference"/>
        <attr name="wswBackColor" format="color|reference"/>
        <attr name="wswFadeBack" format="boolean"/>
        <attr name="wswThumbRangeRatio" format="float"/>
        <attr name="wswAnimationDuration" format="integer"/>
        <attr name="wswTintColor" format="color|reference"/>
        <attr name="wswTextOn" format="string"/>
        <attr name="wswTextOff" format="string"/>
        <attr name="wswTextThumbInset" format="dimension|reference"/>
        <attr name="wswTextExtra" format="dimension|reference"/>
        <attr name="wswTextAdjust" format="dimension|reference"/>
    </declare-styleable>

    <!-- 圆角背景文字-->
    <declare-styleable name="RoundTextView">
        <attr name="wswStrokeWidth"/>
        <attr name="wswCornerRadius"/>
        <attr name="wswNormalStrokeColor"/>
        <attr name="wswNormalStrokeWidth"/>
        <attr name="wswNormalTextColor"/>
        <attr name="wswNormalFillColor"/>
        <attr name="wswPressedStrokeColor"/>
        <attr name="wswPressedStrokeWidth"/>
        <attr name="wswPressedTextColor"/>
        <attr name="wswPressedFillColor"/>
        <attr name="wswSelectedStrokeColor"/>
        <attr name="wswSelectedStrokeWidth"/>
        <attr name="wswSelectedTextColor"/>
        <attr name="wswSelectedFillColor"/>
        <attr name="wswDisabledStrokeColor"/>
        <attr name="wswDisabledStrokeWidth"/>
        <attr name="wswDisabledTextColor"/>
        <attr name="wswDisabledFillColor"/>
        <attr name="wswRippleColor"/>
    </declare-styleable>

    <!-- 圆角背景按钮 -->
    <declare-styleable name="RoundButton">
        <attr name="wswStrokeWidth"/>
        <attr name="wswCornerRadius"/>
        <attr name="wswNormalStrokeColor"/>
        <attr name="wswNormalStrokeWidth"/>
        <attr name="wswNormalTextColor"/>
        <attr name="wswNormalFillColor"/>
        <attr name="wswPressedStrokeColor"/>
        <attr name="wswPressedStrokeWidth"/>
        <attr name="wswPressedTextColor"/>
        <attr name="wswPressedFillColor"/>
        <attr name="wswSelectedStrokeColor"/>
        <attr name="wswSelectedStrokeWidth"/>
        <attr name="wswSelectedTextColor"/>
        <attr name="wswSelectedFillColor"/>
        <attr name="wswDisabledStrokeColor"/>
        <attr name="wswDisabledStrokeWidth"/>
        <attr name="wswDisabledTextColor"/>
        <attr name="wswDisabledFillColor"/>
        <attr name="wswRippleColor"/>
        <attr name="wswTopBottomPaddingEnabled" format="boolean"/>
    </declare-styleable>

    <!-- 圆角图片 -->
    <declare-styleable name="RoundImageView">
        <attr name="wswRound">
            <flag name="left_top" value="0x01"/>
            <flag name="left_bottom" value="0x02"/>
            <flag name="right_top" value="0x04"/>
            <flag name="right_bottom" value="0x08"/>
            <flag name="all" value="0x0f"/>
        </attr>
        <attr name="wswCornerRadius"/>
    </declare-styleable>

    <!-- 数字进度条 -->
    <declare-styleable name="NumberProgressBar">
        <attr name="wswProgress"/>
        <attr name="wswMax"/>
        <attr name="wswUnreachedColor" format="color|reference"/>
        <attr name="wswReachedColor" format="color|reference"/>
        <attr name="wswReachedBarHeight" format="dimension|reference"/>
        <attr name="wswUnreachedBarHeight" format="dimension|reference"/>
        <attr name="wswTextSize"/>
        <attr name="wswTextColor"/>
        <attr name="wswTextOffset" format="dimension|reference"/>
        <attr name="wswTextVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <!-- 圆形进度条 -->
    <declare-styleable name="CircleProgressBar">
        <attr name="wswStartColor" format="color|reference"/>
        <attr name="wswEndColor" format="color|reference"/>
        <attr name="wswTextColor"/>
        <attr name="wswTextSize"/>
        <attr name="wswMax"/>
        <attr name="wswProgress"/>
        <attr name="wswStartAngle" format="float"/>
        <attr name="wswBackgroundCircleColor" format="color|reference"/>
        <attr name="wswProgressCircleColor" format="color|reference"/>
        <attr name="wswBackgroundCircleWidth" format="dimension|reference"/>
        <attr name="wswProgressCircleWidth" format="dimension|reference"/>
        <attr name="wswDotRadius" format="dimension|reference"/>
        <attr name="wswCircleStyle" format="enum">
            <enum name="FILL" value="0"/>
            <enum name="STROKE" value="1"/>
            <enum name="FILL_AND_STROKE" value="2"/>
        </attr>
        <attr name="wswTextVisible" format="boolean"/>
        <attr name="wswDotVisible" format="boolean"/>
        <attr name="wswBackgroundCircleVisible" format="boolean"/>
        <attr name="wswStrokeCap" format="enum">
            <enum name="BUTT" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="SQUARE" value="2"/>
        </attr>
        <attr name="wswColorStyle" format="enum">
            <enum name="SOLID" value="0"/>
            <enum name="GRADIENT" value="1"/>
        </attr>
    </declare-styleable>

    <!-- 可旋转TextView -->
    <declare-styleable name="RotatableTextView">
        <attr name="wswDegree" format="float"/>
    </declare-styleable>
</resources>