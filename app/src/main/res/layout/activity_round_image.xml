<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.snail.widget.RoundImageView
            app:wswRound="all"
            app:wswCornerRadius="8dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="all"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="left_top|left_bottom|right_top"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="left_top|left_bottom|right_bottom"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        

        <com.snail.widget.RoundImageView
            app:wswRound="left_top"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="right_top"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="left_bottom"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="right_bottom"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.snail.widget.RoundImageView
            app:wswRound="left_top|right_bottom"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="right_top|left_top"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="left_bottom|right_top"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <com.snail.widget.RoundImageView
            app:wswRound="right_bottom|left_bottom"
            android:layout_marginStart="10dp"
            app:wswCornerRadius="30dp"
            android:src="@drawable/img"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>
</LinearLayout>